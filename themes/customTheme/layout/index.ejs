<div class='row text-center top-part'>
    <img src="/image/my-photo.jpg" width = "300px" alt="My face" class="img-circle" />
	<h1 class='author-name'><%= config.author %></h1>
    <div class='col-sm-4 col-sm-offset-4'>
        <p><%= config.subtitle %></p>
    </div>
    <div class='col-sm-12'>
        <a href='https://github.com/RistoBIn' target='_blank' class="btn btn-linkedin btn-circle">
            <i class="fa fa-github fa-6"></i>
        </a>
        <a href='https://www.facebook.com/risto.binovski' target='_blank' class="btn btn-primary btn-circle">
            <i class="fa fa-facebook fa-6"></i>
        </a>
    </div>
</div>
<section class="ss-style-doublediagonal">
    <% page.posts.each(function(post){ %>
        <div class='row blog-post'>
            <h1>
                <a href="<%- url_for(post.path) %>">
                    <%= post.title %>
                </a>
            </h1>
            <%= date(post.date, config.date_format) %> 
            
            <% if(post.excerpt) { %>
                <p>
                    <%- post.excerpt %>
                </p>
            <% } %>
            <hr />
        </div>
    <% }) %>
</section>